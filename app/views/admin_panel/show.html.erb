<div ng-controller="adminPanelController">
    <h2>Admin Panel</h2>
    <div class="panel panel-default">
        <div class="panel-heading">Invite Partner to SVP</div>
        <div class="panel-body">
            <form>
                <div class="form-group">
                    <label for="inputEmail">Email Address</label>
                    <input type="email" class="form-control" id="inputEmail" placeholder="Enter Invitee's Email Address" ng-model="invitee.email">
                    <div class="checkbox">
                        <label for="adminCheck"><input id="adminCheck" type="checkbox" ng-model="invitee.super_admin">Give admin access?</label>
                    </div>
                    <button type="submit" class="btn btn-default" ng-click="invitePartner(invitee)">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">User Managment</div>
        <div class="panel-body">
            <uib-tabset>
                <uib-tab heading="Partner Accounts">
                    <table class="table table-striped">
                        <thead><tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Edit Info</th>
                            <th>Delete Account</th>
                            <th>Give Admin Access</th>
                        </tr></thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </uib-tab>
                <uib-tab heading="Admin Accounts">
                    <table class="table table-striped">
                        <thead><tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Edit Info</th>
                            <th>Delete Account</th>
                            <th>Rescind Admin Access</th>
                        </tr></thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </uib-tab>
            </uib-tabset>
        </div>
    </div>
</div>
