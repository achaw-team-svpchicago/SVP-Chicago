<!-- section 3 -->
<%= render partial: "partials/overview_mission" %>

<!-- section 4 -->
<%= render partial: "partials/vision" %>

<!-- section 5 -->
<%= render partial: "partials/concerns" %>

<!-- section 6 -->
<%= render partial: "partials/challenges_header" %>
<%= render partial: "partials/challenges_board" %>
<%= render partial: "partials/challenges_operations" %>
<%= render partial: "partials/challenges_fund" %>
<%= render partial: "partials/challenges_marketing" %>
<%= render partial: "partials/challenges_strategic" %>
<%= render partial: "partials/challenges_technology" %>
<%= render partial: "partials/challenges_other" %>
<%= render partial: "partials/total_fte_count" %>


<!-- additional comments section 7 -->
<%= render partial: "partials/additional" %>

<!-- section 8 -->
<%= render partial: "partials/referral" %>

<!-- section 9 -->
<%= render partial: "partials/demographics" %>

<!-- section 10 -->
<%= render partial: "partials/geographical" %>
<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %> 


  <div class="form-group pull-right">        
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>
<em>Thank you for your interest in partnering with Social Venture Partners Chicago!</em>