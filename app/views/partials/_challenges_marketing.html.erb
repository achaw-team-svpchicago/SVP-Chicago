<div class="row">
  <div class="well col-md-9"><h4>Marketing</h4></div><br>
  <div class="col-md-1">
    <input type="number" class="form-control" name="actual_staff_marketing" placeholder="FTEs (actual)" min="0" value="<%= @loi_form.actual_staff_marketing %>">
  </div>
  <div class="col-md-1">
    <input type="number" class="form-control" name="current_staff_marketing" placeholder="FTEs (current)" min="0" value="<%= @loi_form.current_staff_marketing %>">
  </div>
  <div class="col-md-1">
    <input type="number" class="form-control" name="projected_staff_marketing" placeholder="FTEs (projected)" min="0" value="<%= @loi_form.projected_staff_marketing %>">
  </div>
  <br>
</div>
<div class="row form-group">
  <div class="col-md-2"></div>
