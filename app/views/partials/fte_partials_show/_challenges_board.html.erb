<div class="row">
  <div class="well col-md-9">
    <h4>Board Development &amp; Governance</h4>
  </div>
  <br>
  <div class="col-md-1">
    <input type="number" class="form-control" name="actual_staff_board" placeholder="FTEs (actual)" min="0" value="<%= @loi_form.actual_staff_board %>">
  </div>

  <div class="col-md-1">
    <input type="number" class="form-control" name="current_staff_board" placeholder="FTEs (current)" min="0" value="<%= @loi_form.current_staff_board %>">
  </div>
  <div class="col-md-1">
    <input type="number" class="form-control" name="projected_staff_board" placeholder="FTEs (projected)" min="0" value="<%= @loi_form.projected_staff_board %>">
  </div>
  <br>
</div>

<div class="row form-group">
  <div class="col-md-2"></div>
  <div class="col-md-5">
    <input type="text" class="form-control" name="board_challenge_1" placeholder="1. Enter a board challenge" value="<%= @loi_form.board_challenge_1 %>">
  </div>
  <div class="col-md-2">
    <select name="board_1_priority" class="form-control">
      <option value="">Select priority</option>
      <option <% if @loi_form.board_1_priority == "high" %>selected <% end %>value="high">High</option>
      <option <% if @loi_form.board_1_priority == "medium" %>selected <% end %>value="medium">Medium</option>
      <option <% if @loi_form.board_1_priority == "low" %>selected <% end %>value="low">Low</option>
    </select>
  </div>
</div>

<div class="row form-group">
  <div class="col-md-2"></div>
  <div class="col-md-5">
    <input type="text" class="form-control" name="board_challenge_2" placeholder="2. Enter a board challenge"  value="<%= @loi_form.board_challenge_2 %>">
  </div>
  <div class="col-md-2">
    <select name="board_2_priority" class="form-control">
      <option value="">Select priority</option>
      <option <% if @loi_form.board_2_priority == "high" %>selected <% end %>value="high">High</option>
      <option <% if @loi_form.board_2_priority == "medium" %>selected <% end %>value="medium">Medium</option>
      <option <% if @loi_form.board_2_priority == "low" %>selected <% end %>value="low">Low</option>
    </select>
  </div>
</div> 

<div class="row form-group">
  <div class="col-md-2"></div>
  <div class="col-md-5">
    <input type="text" class="form-control" name="board_challenge_3" placeholder="3. Enter a board challenge"  value="<%= @loi_form.board_challenge_3 %>">
  </div>
  <div class="col-md-2">
    <select name="board_3_priority" class="form-control">
      <option value="">Select priority</option>
      <option <% if @loi_form.board_3_priority == "high" %>selected <% end %>value="high">High</option>
      <option <% if @loi_form.board_3_priority == "medium" %>selected <% end %>value="medium">Medium</option>
      <option <% if @loi_form.board_3_priority == "low" %>selected <% end %>value="low">Low</option>
    </select>
  </div>
</div>


