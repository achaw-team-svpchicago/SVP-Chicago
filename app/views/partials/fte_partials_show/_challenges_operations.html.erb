      <option <% if @loi_form.operations_2_priority == "medium" %>selected <% end %>value="medium">Medium</option>
      <option <% if @loi_form.operations_2_priority == "low" %>selected <% end %>value="low">Low</option>
    </select>
  </div>
</div> 

<div class="row form-group">
  <div class="col-md-2"></div>
  <div class="col-md-5">
    <input type="text" class="form-control" name="operations_challenge_3" placeholder="3. Enter a business operations challenge" value="<%= @loi_form.operations_challenge_3 %>">
  </div>
  <div class="col-md-2">
    <select name="operations_3_priority" class="form-control">
