<div class="row">
  <div class="well col-md-9">
    <h4>Total FTE Count</h4>
  </div>
  <br>
  <div class="col-md-1">
    <input type="number" class="form-control" name="actual_staff_total" placeholder="2015" min="0" value="<%= @loi_form.actual_staff_total %>">
  </div>
  <div class="col-md-1">
    <input type="number" class="form-control" name="current_staff_total" placeholder="2016 - This figure should match the Employees field in section 2." min="0" value="<%= @loi_form.current_staff_total %>">
  </div>
  <div class="col-md-1">
    <input type="number" class="form-control" name="projected_staff_total" placeholder="2017" min="0" value="<%= @loi_form.projected_staff_total %>">
  </div>
</div>